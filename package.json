{
  "name": "bartender",
  "version": "0.3.13-beta",
  "description": "Effortless MCP, powered by Bartender.",
  "main": "./out/main/index.js",
  "author": "HWANG JUN HYEOK",
  "homepage": "https://github.com/justn-hyeok/bartender-fe",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "pnpm typecheck && electron-vite build",
    "clean": "rm -rf dist/ out/",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "pnpm typecheck:node && pnpm typecheck:web",
    "start": "electron-vite preview",
    "build:unpack": "pnpm build && electron-builder --dir",
    "build:win": "pnpm build && electron-builder --win",
    "build:mac": "pnpm build && electron-builder --mac",
    "build:linux": "pnpm build && electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@agentica/core": "^0.31.2",
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@tanstack/react-query": "^5.85.3",
    "axios": "^1.11.0",
    "date-fns": "^4.1.0",
    "electron-updater": "^6.3.9",
    "openai": "^5.12.2",
    "typia": "^9.7.1",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@tanstack/react-query-devtools": "^5.85.3",
    "@types/node": "^22.16.5",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.6",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.7.0",
    "electron": "^37.2.3",
    "electron-builder": "^25.1.8",
    "electron-vite": "^4.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.5"
  },
  "build": {
    "appId": "com.hwangjunhyeok.bartender",
    "productName": "Bartender FE",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "resources/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "resources/Bartender.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "resources/Bartender.ico",
      "uninstallerIcon": "resources/Bartender.ico"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "resources/Bartender.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "resources/Bartender.svg"
    }
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  }
}
